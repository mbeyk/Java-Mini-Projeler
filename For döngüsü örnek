//Bu örnekte kullanıcının girdiği sayıya kadar,her satırda sayısı bir artacak şekilde yıldız yazdırıyoruz.
//for döngüsü kullanılarak kodlanmıştır.

import java.util.Scanner;

public class Main{
    public static void main(String[] args){

        Scanner input= new Scanner(System.in);
        System.out.print("Lutfen bir sayi giriniz: ");

        int sayi=input.nextInt();

        for(int i=0;i<=sayi;i++){
            for(int j=0;j<=i;j++){
                System.out.print("*");
            }
            System.out.println("");
        }
    }
}
